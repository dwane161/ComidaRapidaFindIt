<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/linearLayoutRatingDetail">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/imageViewRating"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                style="@style/Base.TextAppearance.AppCompat.Title"
                android:id="@+id/nombreUsuarioRating"
                android:text="Nombre del usuario"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:id="@+id/fechaRating"
                android:text="fecha"/>
        </LinearLayout>
    </LinearLayout>
    <RatingBar
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/ratingBarRating"
        android:layout_height="wrap_content"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_marginLeft="60dp"
        android:numStars="5"
        android:isIndicator="true"
        android:progressTint="@color/colorStars"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/commentRating"
        android:layout_marginLeft="60dp"
        android:text="Some comment"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_calculation_operations_minus_sign"/>

</LinearLayout>